@model SponsorEventViewModel

@{ ViewData["Title"] = "Home Page"; }

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        @{int CarosuelNr = 0;}
        @for (int i = 0; i < Model.Events.Count; i++)
        {

            @if (Model.Events[i].Prioritize == 1)
            {

                Event Event = Model.Events[i];

                @if (Event.Picture != null && CarosuelNr < 4)
                {

                    var base64 = Convert.ToBase64String(Event.Picture);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    if (CarosuelNr == 0)
                    {

                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@imgSrc" alt="Event picture">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" src="@imgSrc" alt="Event picture">
                        </div>
                    }

                    CarosuelNr++;
                }


            }
        }
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
